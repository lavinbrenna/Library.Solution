@{
Layout = "_Layout";
}

@model Library.Models.Book

<h2>Book Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>
<h3>@Html.DisplayNameFor(model => model.Author): @Html.DisplayFor(model => model.Author)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This book is not currently checked out</p>
}
else
{
  <h4>This book is currently checked out by:</h4>
}
<p>@Html.ActionLink("Edit book", "Edit", new {id = Model.BookId})</p>
<p>@Html.ActionLink("Delete book", "Delete", new { id = Model.BookId})</p>
<p>@Html.ActionLink("Back to list", "Index")</p>